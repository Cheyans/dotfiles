set statusline+=%F
set number
map <Enter> o

filetype plugin indent on

set mouse=a
set ttymouse=sgr
set clipboard+=unnamed

" show existing tab with specified spaces width
set tabstop=2
set softtabstop=2
" when indenting with '>', use specified spaces width
set shiftwidth=2
" On pressing tab, insert specified spaces
set expandtab

syntax on
